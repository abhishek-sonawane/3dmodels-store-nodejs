<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if (locals.errorMessage != null) { %>
        <div class="error-message"><%= errorMessage %></div>
      <% } %>
    <h1>upload models</h1>
    <form action="/catalogue/upload" method="post" enctype="multipart/form-data">
        <div>
            <label for="title">title:</label>
            <input type="text" id="title" name="title" >
        </div>
        <div class="price">
            <label  for="price">price:</label>
            <input type="number" id="price" name="price" required>
        </div>
        
        <div class="model">
             <label for="model">model:</label>
             <input type="file" id="model" name="model" required>
        </div>

        <div >
            <label for="coverImage">image:</label>
            <input type="file" id="coverImage" name="coverImage" required>
       </div>

        <div class="category">   
            <label for="category">category:</label>

            <select name="category" id="category">
               

                <% category.forEach(item => { %>
                    <% if (item.id === productmodel.category ){ %>
                      <option selected label="<%= item.name %>" value="<%= item.id %>">
                    <% } else { %>
                      <option label="<%= item.name %>" value="<%= item.id %>">
                    <% } %>
                  <% }) %>

            </select>
            
       </div>
        <div class="description">
            <label for="description">description:</label>
            <textarea name="description" id="description" cols="30" rows="10" required></textarea>
        </div>

        <button type="submit">create</button>

    </form>
</body>
</html>