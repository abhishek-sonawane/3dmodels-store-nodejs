<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body id="upload" >
   <div class="navv">
    <%- include ('./layouts/navbar') %>
   </div>
  
   <div class="container">

    <% if (locals.errorMessage != null) { %>
        <div class="error-message"><%= errorMessage %></div>
      <% } %>
    <h1>upload models</h1>
   
    <form class="upload-form" action="/catalogue/upload" method="post" enctype="multipart/form-data">

        <div class="upload-attr" >
            <label for="title">title:</label>
            <input type="text" id="title" name="title" >
        </div>
        <div class="upload-attr">
            <label  for="price">price:</label>
            <input type="number" id="price" name="price" min="0" required>
        </div>
        
        <div class="upload-attr" >
             <label for="model">model:</label>
             <input type="file" id="model" name="model" required>
        </div>

        <div class="upload-attr" >
            <label for="coverImage">image:</label>
            <input type="file" id="coverImage" name="coverImage" required>
       </div>

        <div class="upload-attr">   
            <label for="category">category:</label>

            <select name="category" id="category">
               

                <% category.forEach(item => { %>
                    <% if (item.id === productmodel.category ){ %>
                      <option selected label="<%= item.name %>" value="<%= item.id %>">
                    <% } else { %>
                      <option label="<%= item.name %>" value="<%= item.id %>">
                    <% } %>
                  <% }) %>

            </select>
            
       </div>
        <div class="upload-attr">
            <label for="description">description:</label>
            <textarea name="description" id="description" cols="30" rows="4" required></textarea>
        </div>

        <button type="submit">create</button>

    </form>
   </div>
</body>
</html>